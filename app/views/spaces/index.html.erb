     <img src="https://www.zirconinterior.com.au/wp-content/uploads/2022/02/green-retreats-showroom-cafe-and-breakout-area-7832.jpg">
    </div>
      </div>
    <% end %>
  </div>
  </div>
  <div class="container">
    <% @spaces.each do |space| %>
      <div class="card-product">
        <img class="zoomed-in" src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
        <div class="card-product-infos">
          <h2><%= space.name %></h2>
          <%= link_to "View Details", space_path(space), class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>

  <%= link_to "Create Your Own Space", new_space_path(@space), class: "btn btn-gradient", role: "button" %>
