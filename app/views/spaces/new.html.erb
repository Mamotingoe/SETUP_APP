<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1497366811353-6870744d04b2?q=80&w=2069&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D)">
  Booking
</div>
<div class="container">
  <p class="h1"> Add your own Space</p>
  <%= simple_form_for(@space) do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :amenties %>
    <%= f.input :price %>
    <%= f.input :size, as: :radio_buttons, collection: ["Small", "Medium", "Large"] %>
    <%= button_tag(type: 'submit', class: 'btn btn-primary') do %>
      Submit
    <% end %>
  <% end %>
</div>
